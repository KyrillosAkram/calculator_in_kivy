#:kivy 1.0

<Button>:
	font_size: "25dp"


	
lay:
<lay@BoxLayout>:
	orientation: "vertical"
	theinput: zainput
	BoxLayout:
		spacing: "0.5cm"
		padding: [3,10,3,10]
		TextInput:
			id: zainput
	BoxLayout:
		#first row
		orientation: "horizontal"
		BoxLayout:
			padding: [3,3,3,3]			
			Button:
				text: "C"
				on_press: root.theinput.text=""
		BoxLayout:
			padding: [3,3,3,3]			
			Button:
				text: "/"
				on_press: root.theinput.text=root.theinput.text + "/"
		BoxLayout:
			padding: [3,3,3,3]			
			Button:
				text: "*"
				on_press: root.theinput.text=root.theinput.text + "*"
		BoxLayout:
			padding: [3,3,3,3]			
			Button:
				text: "<"
				on_press: root.theinput.text=root.theinput.text[:len(root.theinput.text)-1] if len(root.theinput.text) !=0 else ''
	BoxLayout:
		orientation: "horizontal"
		BoxLayout:
			padding: [3,3,3,3]			
			Button:
				text: "7"
				on_press: root.theinput.text=root.theinput.text + "7"
		BoxLayout:
			padding: [3,3,3,3]			
			Button:
				text: "8"
				on_press: root.theinput.text=root.theinput.text + "8"
		BoxLayout:
			padding: [3,3,3,3]			
			Button:
				text: "9"
				on_press: root.theinput.text=root.theinput.text + "9"
		BoxLayout:
			padding: [3,3,3,3]			
			Button:
				text: "-"
				on_press: root.theinput.text=root.theinput.text + "-"
	BoxLayout:
		orientation: "horizontal"
		BoxLayout:
			padding: [3,3,3,3]			
			Button:
				text: "4"
				on_press: root.theinput.text=root.theinput.text + "4"
		BoxLayout:
			padding: [3,3,3,3]			
			Button:
				text: "5"
				on_press: root.theinput.text=root.theinput.text + "5"
		BoxLayout:
			padding: [3,3,3,3]			
			Button:
				text: "6"
				on_press: root.theinput.text=root.theinput.text + "6"
		BoxLayout:
			padding: [3,3,3,3]			
			Button:
				text: "+"
				on_press: root.theinput.text=root.theinput.text + "+"

# the 4th row is 2 boxlayout in this row with  double hight of the ordinary button hight
	BoxLayout:
		size_hint_y: 2
		orientation: "horizontal"
		BoxLayout:
			orientation: "vertical"
			BoxLayout:
				# 1 2 3 buttons
				orientation: "horizontal"
				BoxLayout:
					padding: [3,3,3,3]					
					Button:
						text: "1"
						on_press: root.theinput.text=root.theinput.text + "1"
				BoxLayout:
					padding: [3,3,3,3]					
					Button:
						text: "2"
						on_press: root.theinput.text=root.theinput.text + "2"
				BoxLayout:
					padding: [3,3,3,3]					
					Button:
						text: "3"
						on_press: root.theinput.text=root.theinput.text + "3"
			BoxLayout:
				orientation: "horizontal"
				BoxLayout:
					padding: [3,3,3,3]					
					Button:
						text: "0"
						on_press: root.theinput.text=root.theinput.text + "0"
				BoxLayout:
					padding: [3,3,3,3]
					size_hint_x: 0.5					
					Button:
						text: "."
						on_press: root.theinput.text=root.theinput.text + "."

		BoxLayout:
			size_hint_x: 0.3333
			orientation:  "horizontal"
			BoxLayout:
				padding: [3,3,3,3]				
				Button:
					text: "="
					on_press: root.theinput.text=str(root.calculate(root.theinput.text))